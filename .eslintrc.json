{
    "root": true,
    "ignorePatterns": [
        "**/*"
    ],
    "plugins": [
        "@nx"
    ],
    "overrides": [
        {
            "files": [
                "*.ts",
                "*.tsx",
                "*.js",
                "*.jsx"
            ],
            "rules": {
                "@nx/enforce-module-boundaries": [
                    "error",
                    {
                        "enforceBuildableLibDependency": true,
                        "allow": [],
                        "depConstraints": [
                            {
                                "sourceTag": "shared",
                                "onlyDependOnLibsWithTags": [
                                    "shared"
                                ]
                            },
                            {
                                "sourceTag": "server/backup-service",
                                "onlyDependOnLibsWithTags": [
                                    "shared",
                                    "router",
                                    "server/backup-service"
                                ]
                            },
                            {
                                "sourceTag": "server/music-downloader",
                                "onlyDependOnLibsWithTags": [
                                    "shared",
                                    "router",
                                    "server/music-downloader"
                                ]
                            },
                            {
                                "sourceTag": "server/scoreboard",
                                "onlyDependOnLibsWithTags": [
                                    "shared",
                                    "router",
                                    "server/scoreboard"
                                ]
                            },
                            {
                                "sourceTag": "server/nutrition",
                                "onlyDependOnLibsWithTags": [
                                    "shared",
                                    "router",
                                    "server/nutrition"
                                ]
                            }
                        ]
                    }
                ]
            }
        },
        {
            "files": [
                "*.ts",
                "*.tsx"
            ],
            "extends": [
                "plugin:@nx/typescript"
            ],
            "rules": {}
        },
        {
            "files": [
                "*.js",
                "*.jsx"
            ],
            "extends": [
                "plugin:@nx/javascript"
            ],
            "rules": {}
        },
        {
            "files": [
                "*.spec.ts",
                "*.spec.tsx",
                "*.spec.js",
                "*.spec.jsx"
            ],
            "env": {
                "jest": true
            },
            "rules": {}
        }
    ]
}
