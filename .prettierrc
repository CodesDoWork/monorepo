{
    "trailingComma": "all",
    "tabWidth": 4,
    "useTabs": false,
    "singleQuote": false,
    "endOfLine": "lf",
    "bracketSameLine": true,
    "jsxSingleQuote": false,
    "semi": true,
    "arrowParens": "avoid",
    "printWidth": 100,
    "proseWrap": "always",
    "overrides": [
        {
            "files": ["*.yml", "*.yaml", "*.md"],
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": "*.md",
            "options": {
                "embeddedLanguageFormatting": "off"
            }
        },
        {
            "files": "*.astro",
            "options": {
                "parser": "astro"
            }
        }
    ],
    "plugins": ["prettier-plugin-svelte", "prettier-plugin-tailwindcss", "prettier-plugin-astro"]
}
