{
    "name": "server-backup-service",
    "$schema": "../../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "apps/server/backup-service/src",
    "projectType": "application",
    "targets": {
        "build": {
            "executor": "@nx/esbuild:esbuild",
            "outputs": ["{options.outputPath}"],
            "defaultConfiguration": "production",
            "options": {
                "platform": "node",
                "outputPath": "dist/apps/server/backup-service",
                "format": ["cjs"],
                "bundle": false,
                "main": "apps/server/backup-service/src/main.ts",
                "tsConfig": "apps/server/backup-service/tsconfig.app.json",
                "assets": ["apps/server/backup-service/src/assets"],
                "generatePackageJson": true,
                "esbuildOptions": {
                    "sourcemap": true,
                    "outExtension": {
                        ".js": ".js"
                    }
                }
            },
            "configurations": {
                "development": {},
                "production": {
                    "esbuildOptions": {
                        "sourcemap": false,
                        "outExtension": {
                            ".js": ".js"
                        }
                    }
                }
            }
        },
        "serve": {
            "executor": "@nx/js:node",
            "defaultConfiguration": "development",
            "options": {
                "buildTarget": "server-backup-service:build"
            },
            "configurations": {
                "development": {
                    "buildTarget": "server-backup-service:build:development"
                },
                "production": {
                    "buildTarget": "server-backup-service:build:production"
                }
            }
        },
        "lint": {
            "executor": "@nx/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["apps/server/backup-service/**/*.ts"]
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "apps/server/backup-service/jest.config.ts",
                "passWithNoTests": true
            },
            "configurations": {
                "ci": {
                    "ci": true,
                    "codeCoverage": true
                }
            }
        },
        "build-image": {
            "executor": "@codesdowork/nx-containers:build",
            "options": {
                "args": "--network host"
            }
        },
        "run-image": {
            "executor": "nx:run-commands",
            "options": {
                "command": "docker compose -f apps/server/docker-compose.yml up -d backup-service"
            }
        }
    },
    "tags": ["server/backup-service"]
}
