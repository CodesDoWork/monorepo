{
    "name": "server-documentation",
    "$schema": "../../../node_modules/nx/schemas/project-schema.json",
    "projectType": "application",
    "targets": {
        "build": {
            "executor": "nx:run-commands",
            "options": {
                "commands": [
                    "cp libs/branding/assets/img/logo.svg apps/server/documentation/docs/public",
                    "cp libs/branding/assets/img/icon.svg apps/server/documentation/docs/public",
                    "cp libs/branding/assets/favicon/favicon.ico apps/server/documentation/docs/public",
                    "vitepress build apps/server/documentation/docs"
                ]
            }
        },
        "dev": {
            "executor": "nx:run-commands",
            "options": {
                "commands": [
                    "cp libs/branding/assets/img/logo.svg apps/server/documentation/docs/public",
                    "cp libs/branding/assets/img/icon.svg apps/server/documentation/docs/public",
                    "cp libs/branding/assets/favicon/favicon.ico apps/server/documentation/docs/public",
                    "vitepress dev apps/server/documentation/docs"
                ]
            }
        },
        "preview": {
            "executor": "nx:run-commands",
            "options": {
                "command": "vitepress preview apps/server/documentation/docs"
            }
        },
        "lint": {
            "executor": "@nx/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["apps/server/documentation/**/*.js"]
            }
        },
        "test": {
            "executor": "nx:run-commands",
            "options": {
                "command": "echo no tests yet"
            }
        }
    },
    "tags": []
}
