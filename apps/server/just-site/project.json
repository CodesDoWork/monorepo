{
    "name": "server-just-site",
    "$schema": "../../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "apps/server/just-site/src",
    "projectType": "application",
    "targets": {
        "build": {
            "executor": "nx:run-commands",
            "options": {
                "commands": ["cd apps/server/just-site && vite build --config vite-config.js"]
            }
        },
        "serve": {
            "executor": "nx:run-commands",
            "options": {
                "commands": ["cd apps/server/just-site && vite dev --config vite-config.js"]
            }
        },
        "preview": {
            "executor": "nx:run-commands",
            "options": {
                "commands": ["cd apps/server/just-site && vite preview --config vite-config.js"]
            }
        },
        "lint": {
            "executor": "@nx/eslint:lint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["apps/server/just-site/**/*.{ts,svelte,spec.ts}"]
            }
        },
        "check": {
            "executor": "nx:run-commands",
            "options": {
                "command": "svelte-check",
                "cwd": "apps/server/just-site"
            }
        }
    },
    "tags": ["server/just-site"]
}
