{
    "name": "server-renovate",
    "$schema": "../../../node_modules/nx/schemas/project-schema.json",
    "projectType": "application",
    "targets": {
        "lint": {
            "executor": "nx:run-commands",
            "options": {
                "command": "echo no linting"
            }
        },
        "deploy-command": {
            "executor": "nx:run-commands",
            "options": {
                "command": "echo docker compose -f /opt/monorepo/server/docker-compose.yml --env-file /opt/monorepo/server/.env up --pull always renovate"
            }
        },
        "deploy": {
            "executor": "nx:run-commands",
            "options": {
                "command": "copyfiles ./apps/server/renovate/config.js -u 1 ./deploy/opt/monorepo"
            }
        }
    },
    "tags": []
}
