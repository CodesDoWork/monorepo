{
    "name": "server-reverse-proxy",
    "$schema": "../../../node_modules/nx/schemas/project-schema.json",
    "projectType": "application",
    "targets": {
        "serve": {
            "executor": "nx:run-commands",
            "options": {
                "command": "docker compose -f apps/server/docker-compose.yml up -d reverse-proxy"
            }
        },
        "build-image": {
            "executor": "@codesdowork/nx-containers:build"
        },
        "run-image": {
            "executor": "nx:run-commands",
            "options": {
                "command": "docker compose -f apps/server/docker-compose.yml up -d reverse-proxy"
            }
        },
        "brun": {
            "executor": "nx:run-commands",
            "options": {
                "command": "nx build-image server-reverse-proxy && nx run-image server-reverse-proxy"
            }
        }
    },
    "tags": []
}
