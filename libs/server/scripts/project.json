{
    "name": "server-scripts",
    "$schema": "../../../node_modules/nx/schemas/project-schema.json",
    "projectType": "library",
    "targets": {
        "deploy-command": {
            "executor": "nx:run-commands",
            "options": {
                "commands": [
                    "echo chmod 755 /home/jkonratt",
                    "echo chmod -R 600 /etc/cron.d",
                    "echo systemctl restart cron",
                    "node ./libs/server/scripts/scripts+x-deploy-command.mjs"
                ]
            }
        },
        "deploy": {
            "executor": "nx:run-commands",
            "options": {
                "command": "copyfiles \"./libs/server/scripts/deploy/**/*\" -u 4 ./deploy"
            }
        },
        "lint": {
            "executor": "nx:run-commands",
            "options": {
                "command": "echo no linting"
            }
        }
    },
    "tags": []
}
