{
    "$schema": "https://json-schema.org/schema",
    "$id": "EnvFiles",
    "title": "",
    "type": "object",
    "properties": {
        "stages": {
            "type": "array",
            "description": "Stages to use",
            "$default": {
                "$source": "argv",
                "index": 0
            },
            "x-prompt": "Which stage do you want to use?"
        },
        "username": {
            "type": "string",
            "description": "Username/Email for BW",
            "default": "",
            "$default": {
                "$source": "argv",
                "index": 1
            }
        },
        "password": {
            "type": "string",
            "description": "Password for BW",
            "default": "",
            "$default": {
                "$source": "argv",
                "index": 2
            }
        },
        "dirs": {
            "type": "array",
            "description": "Relative dir pahts to generate .env files for",
            "alias": "p",
            "default": ["."]
        },
        "recursive": {
            "type": "boolean",
            "description": "Apply to children",
            "default": true
        }
    },
    "required": []
}
