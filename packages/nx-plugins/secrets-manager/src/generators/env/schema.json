{
    "$schema": "https://json-schema.org/schema",
    "$id": "EnvFiles",
    "title": "",
    "type": "object",
    "properties": {
        "stages": {
            "type": "array",
            "description": "Stages to use",
            "$default": {
                "$source": "argv",
                "index": 0
            },
            "x-prompt": "Which stage do you want to use?"
        },
        "email": {
            "type": "string",
            "description": "Email for Bitwarden",
            "$default": {
                "$source": "argv",
                "index": 1
            }
        },
        "password": {
            "type": "string",
            "description": "Password for Bitwarden",
            "default": "",
            "$default": {
                "$source": "argv",
                "index": 2
            }
        },
        "dirs": {
            "type": "array",
            "description": "Relative dir pahts to generate .env files for",
            "default": ["."]
        },
        "recursive": {
            "type": "boolean",
            "description": "Apply to children",
            "default": true
        },
        "no-recursive": {
            "type": "boolean",
            "description": "Don't apply to children",
            "default": false
        }
    },
    "required": []
}
