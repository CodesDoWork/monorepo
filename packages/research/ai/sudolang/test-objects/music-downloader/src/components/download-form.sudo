DownloadForm {
    Props {
        className: String (optional)
    }

    States {
        url
    }

    fn download() {
        Calls a server-side function `download` with the current url.
    }

    Style: flex gap-4 w-1/2

    Contraints {
        Renders a container with the given style className.
        Contains an input for the url {
            Style: rounded-md h-10 w-full
        }
        Contains a "Download" Button {
            Parameters {
                className: Button style
                onClick: download function
            }

            Style {
                px-8 h-10 rounded-md
                bg-primary-500 text-onPrimary
                lighter bg on hover, normal when active
                large, bold font
            }
        }
    }
}