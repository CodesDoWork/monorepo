{
    "parser": "@typescript-eslint/parser",
    "extends": ["../../../.eslintrc.json"],
    "plugins": ["svelte3", "@typescript-eslint"],
    "ignorePatterns": ["!**/*", "vite.config.ts", "node_modules", ".svelte-kit"],
    "overrides": [
        {
            "files": ["*.svelte"],
            "parser": "svelte-eslint-parser",
            "parserOptions": {
                "parser": "@typescript-eslint/parser"
            }
        }
    ],
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2020,
        "extraFileExtensions": [".svelte"]
    },
    "env": {
        "browser": true,
        "es2017": true,
        "node": true
    }
}
