{
    "name": "dns",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "application",
    "targets": {
        "build": {
            "executor": "nx:run-commands",
            "options": {
                "commands": [
                    "envsub dnsmasq.d/custom.conf.template dnsmasq.d/custom.conf"
                ],
                "cwd": "src/dns"
            }
        },
        "build-image": {
            "executor": "nx:run-commands",
            "options": {
                "command": "docker compose build dns"
            }
        },
        "push-image": {
            "executor": "nx:run-commands",
            "options": {
                "command": "docker compose push dns"
            }
        },
        "trivy": {
            "executor": "@codesdowork/workspace-plugin:trivy"
        }
    },
    "tags": []
}
