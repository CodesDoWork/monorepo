{
    "name": "nginx",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "application",
    "targets": {
        "build-image": {
            "executor": "nx:run-commands",
            "options": {
                "command": "docker compose build nginx"
            }
        },
        "push-image": {
            "executor": "nx:run-commands",
            "options": {
                "command": "docker compose push nginx"
            }
        },
        "trivy": {
            "executor": "@codesdowork/workspace-plugin:trivy"
        }
    },
    "tags": []
}
