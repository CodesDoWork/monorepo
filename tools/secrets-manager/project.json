{
    "name": "@codesdowork/nx-secrets-manager",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "tools/secrets-manager/src",
    "projectType": "library",
    "tags": [],
    "targets": {
        "build": {
            "executor": "@nx/js:tsc",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/tools/secrets-manager",
                "main": "tools/secrets-manager/src/index.ts",
                "tsConfig": "tools/secrets-manager/tsconfig.lib.json",
                "assets": [
                    "tools/secrets-manager/*.md",
                    {
                        "input": "./tools/secrets-manager/src",
                        "glob": "**/!(*.ts)",
                        "output": "./src"
                    },
                    {
                        "input": "./tools/secrets-manager/src",
                        "glob": "**/*.d.ts",
                        "output": "./src"
                    },
                    {
                        "input": "./tools/secrets-manager",
                        "glob": "generators.json",
                        "output": "."
                    },
                    {
                        "input": "./tools/secrets-manager",
                        "glob": "executors.json",
                        "output": "."
                    }
                ]
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "tools/secrets-manager/jest.config.ts"
            }
        }
    },
    "release": {
        "version": {
            "generatorOptions": {
                "packageRoot": "dist/tools/secrets-manager",
                "currentVersionResolver": "registry"
            }
        }
    },
    "targetDefaults": {
        "nx-release-publish": {
            "options": {
                "packageRoot": "dist/tools/secrets-manager"
            }
        }
    }
}
