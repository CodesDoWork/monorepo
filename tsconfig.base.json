{
    "compileOnSave": false,
    "compilerOptions": {
        "jsx": "react-jsx",
        "rootDir": ".",
        "sourceMap": false,
        "declaration": false,
        "moduleResolution": "Bundler",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2017", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "strict": true,
        "strictNullChecks": true,
        "paths": {
            "@codesdowork/just-cms-types": ["packages/just/cms/types/src/index.ts"],
            "@codesdowork/nx-plugins-docker": [
                "packages/nx-plugins/docker/src/index.ts"
            ],
            "@codesdowork/nx-plugins-secrets-manager": [
                "packages/nx-plugins/secrets-manager/src/index.ts"
            ],
            "@codesdowork/nx-plugins-test": ["packages/nx-plugins/test/src/index.ts"],
            "@codesdowork/shared-health": ["packages/shared/health/src/index.ts"],
            "@codesdowork/shared-logging": ["packages/shared/logging/src/index.ts"],
            "@codesdowork/shared-trpc": ["packages/shared/trpc/src/index.ts"],
            "@codesdowork/shared-utils": ["packages/shared/utils/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp", "packages/just/website", "packages/zinzow/website"]
}
