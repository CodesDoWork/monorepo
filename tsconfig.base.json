{
    "compileOnSave": false,
    "compilerOptions": {
        "jsx": "react-jsx",
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2017", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "strict": true,
        "strictNullChecks": true,
        "paths": {
            "server/backup-service/snapshots": [
                "libs/server/backup-service/snapshots/src/index.ts"
            ],
            "server/music-downloader/downloader": [
                "libs/server/music-downloader/downloader/src/index.ts"
            ],
            "server/music-downloader/scheduler": [
                "libs/server/music-downloader/scheduler/src/index.ts"
            ],
            "shared/fastify": ["libs/shared/fastify/src/index.ts"],
            "shared/health": ["libs/shared/health/src/index.ts"],
            "shared/logging": ["libs/shared/logging/src/index.ts"],
            "shared/node/crypto": ["libs/shared/node/crypto/src/index.ts"],
            "shared/trpc": ["libs/shared/trpc/src/index.ts"],
            "shared/utils": ["libs/shared/utils/src/index.ts"],
            "shared/web/components": ["libs/shared/web/components/src/index.ts"],
            "shared/web/utils": ["libs/shared/web/utils/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
