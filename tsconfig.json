{
    "compileOnSave": false,
    "compilerOptions": {
        "target": "esnext",
        "jsx": "preserve",
        "lib": ["esnext", "dom"],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "baseUrl": ".",
        "rootDir": ".",
        "module": "esnext",
        "moduleResolution": "bundler",
        "paths": {
            "@cdw/monorepo/just-branding": ["packages/just/branding/src/index.ts"],
            "@cdw/monorepo/just-branding/*": ["packages/just/branding/*"],
            "@cdw/monorepo/just-cms-types": ["packages/just/cms/types/src/index.ts"],
            "@cdw/monorepo/nx-plugins-astro": ["packages/nx-plugins/astro/src/index.ts"],
            "@cdw/monorepo/nx-plugins-ci": ["packages/nx-plugins/ci/src/index.ts"],
            "@cdw/monorepo/nx-plugins-codegen": ["packages/nx-plugins/codegen/src/index.ts"],
            "@cdw/monorepo/nx-plugins-directus-extensions": [
                "packages/nx-plugins/directus-extensions/src/index.ts"
            ],
            "@cdw/monorepo/nx-plugins-docker": ["packages/nx-plugins/docker/src/index.ts"],
            "@cdw/monorepo/nx-plugins-docker-compose": [
                "packages/nx-plugins/docker-compose/src/index.ts"
            ],
            "@cdw/monorepo/shared-bitwarden": ["packages/shared/bitwarden/src/index.ts"],
            "@cdw/monorepo/shared-logging": ["packages/shared/logging/src/index.ts"],
            "@cdw/monorepo/shared-trivy": ["packages/shared/trivy/src/index.ts"],
            "@cdw/monorepo/shared-utils": ["packages/shared/utils/src/index.ts"],
            "@cdw/monorepo/shared-utils/*": ["packages/shared/utils/src/*.ts"],
            "@cdw/monorepo/nx-plugins-lighthouse": ["packages/nx-plugins/lighthouse/src/index.ts"],
            "@cdw/monorepo/nx-plugins-secrets-manager": [
                "packages/nx-plugins/secrets-manager/src/index.ts"
            ],
            "@cdw/monorepo/nx-plugins-svelte": ["packages/nx-plugins/svelte/src/index.ts"],
            "@cdw/monorepo/nx-plugins-utils": ["packages/nx-plugins/utils/src/index.ts"],
            "@cdw/monorepo/nx-plugins-vite": ["packages/nx-plugins/vite/src/index.ts"],
            "@cdw/monorepo/nx-plugins-vitepress": ["packages/nx-plugins/vitepress/src/index.ts"],
            "@cdw/monorepo/nx-plugins-vitest": ["packages/nx-plugins/vitest/src/index.ts"],
            "@cdw/monorepo/nx-plugins-wrangler": ["packages/nx-plugins/wrangler/src/index.ts"],
            "@cdw/monorepo/*": ["*"]
        },
        "resolveJsonModule": true,
        "allowJs": true,
        "strict": true,
        "strictBindCallApply": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "alwaysStrict": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUncheckedIndexedAccess": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "declaration": false,
        "importHelpers": true,
        "outDir": "./dist",
        "sourceMap": false,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules",
        "tmp",
        "dist",
        "packages/just/music/downloader",
        "packages/just/website",
        "packages/zinzow/website"
    ]
}
